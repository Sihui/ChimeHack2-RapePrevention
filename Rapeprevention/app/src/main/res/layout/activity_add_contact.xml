        android:text=""

        android:textColor="@color/white"
        android:layout_marginRight="25dp"
        android:paddingBottom="136dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/invite_name3" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/add_contact"
        android:layout_marginRight="0dp"
        android:id="@+id/invite_photo4"
        android:layout_alignTop="@+id/invite_photo5"
        android:layout_alignStart="@+id/invite_photo3" />

    <TextView
        android:id="@+id/invite_name5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:paddingTop="22dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/add_contact"
        android:id="@+id/invite_photo5"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/invite_name5"
        android:layout_alignStart="@+id/invite_name6" />

    <TextView
        android:id="@+id/invite_name6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="20dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:textColor="@color/white"
        android:layout_above="@+id/invite_name4"
        android:layout_alignEnd="@+id/invite_name5" />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/add_contact"
        android:id="@+id/invite_photo6"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/invite_name6"
        android:layout_alignStart="@+id/invite_name6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_contact"
        android:id="@+id/add_contact"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_above="@+id/invite_name1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="NEXT"
        style="@style/ButtonTheme"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
